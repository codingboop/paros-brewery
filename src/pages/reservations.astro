---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Reservations | Paros Brewery & Kitchen">
  <main class="min-h-screen overflow-hidden bg-paros-cream">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-40 px-6 py-5 md:py-6 bg-paros-white/95 backdrop-blur-sm border-b border-paros-black/5">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img 
            src="/assets/logo-full.svg" 
            alt="Paros Brewery & Kitchen" 
            class="h-8 md:h-10 w-auto"
          />
        </a>
        <div class="hidden md:flex items-center gap-10 text-xs font-light tracking-[0.15em] uppercase text-paros-black/70">
          <a href="/#story" class="hover:text-paros-blue transition-colors duration-300">Story</a>
          <a href="/#experience" class="hover:text-paros-blue transition-colors duration-300">Experience</a>
          <a href="/#brews" class="hover:text-paros-blue transition-colors duration-300">Freshly Brewed</a>
          <a href="/#celebrations" class="hover:text-paros-blue transition-colors duration-300">Celebrations</a>
          <a href="/#visit" class="hover:text-paros-blue transition-colors duration-300">Visit</a>
        </div>
        <a 
          href="/reservations"
          class="hidden md:inline-block px-6 py-2.5 bg-paros-blue text-paros-white font-light tracking-[0.15em] uppercase text-xs hover:bg-paros-dark-blue transition-all duration-300"
        >
          Reserve
        </a>
      </div>
    </nav>

    <!-- Reservations Section -->
    <section class="pt-24 md:pt-28 pb-12 md:pb-20">
      <div class="max-w-5xl mx-auto px-6 md:px-12">
        <!-- Header -->
        <div class="text-center mb-8 md:mb-12">
          <div class="flex items-center justify-center gap-4 mb-4">
            <div class="w-12 h-px bg-paros-blue/40"></div>
            <p class="text-sm font-light tracking-[0.3em] uppercase text-paros-gray">Book a Table</p>
            <div class="w-12 h-px bg-paros-blue/40"></div>
          </div>
          <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-light text-paros-black leading-tight mb-4">
            Make a <span class="italic text-paros-blue">Reservation</span>
          </h1>
          <p class="text-base font-light text-paros-gray max-w-xl mx-auto">
            Reserve your table at Bangalore's largest rooftop brewery. Experience craft beers, curated cuisine, and unforgettable moments.
          </p>
        </div>

        <!-- ReserveGo Widget -->
        <div class="bg-paros-white rounded-sm shadow-sm overflow-hidden">
          <iframe 
            src="https://widget.reservego.co/reserveOutlets/690f839bab4c8aa2865cf8e6?source=9"
            title="Paros Brewery Reservation Widget"
            class="w-full border-0"
            style="min-height: 700px; height: 80vh; max-height: 900px;"
            loading="lazy"
          ></iframe>
        </div>

        <!-- Contact Info -->
        <div class="mt-12 text-center">
          <p class="text-sm font-light text-paros-gray mb-2">
            Need assistance with your reservation?
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm font-light">
            <a href="tel:+919071234445" class="text-paros-blue hover:text-paros-dark-blue transition-colors">
              +91 9071234445
            </a>
            <span class="hidden sm:inline text-paros-gray">|</span>
            <a href="tel:+919008383021" class="text-paros-blue hover:text-paros-dark-blue transition-colors">
              +91 9008383021
            </a>
            <span class="hidden sm:inline text-paros-gray">|</span>
            <a href="mailto:infoparosbrewery@gmail.com" class="text-paros-blue hover:text-paros-dark-blue transition-colors">
              infoparosbrewery@gmail.com
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Simple Footer -->
    <footer class="py-8 px-6 border-t border-paros-black/5 bg-paros-white">
      <div class="max-w-5xl mx-auto text-center">
        <a href="/" class="inline-block mb-4">
          <img 
            src="/assets/logo-full.svg" 
            alt="Paros Brewery & Kitchen" 
            class="h-8 w-auto mx-auto"
          />
        </a>
        <p class="text-xs font-light text-paros-gray">
          Â© 2026 Paros Brewery & Kitchen. All rights reserved.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Ensure iframe is responsive */
  iframe {
    display: block;
  }
  
  /* Hide scrollbar for cleaner look but allow scrolling */
  iframe::-webkit-scrollbar {
    display: none;
  }
</style>
